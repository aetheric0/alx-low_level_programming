#include "main.h"

int _islower(int c);

int main(void)
{
	int r;

    r = _islower('H');
    _putchar(r + '0');
    r = _islower('o');
    _putchar(r + '0');
    r = _islower(108);
    _putchar(r + '0');
    _putchar('\n');
    return (0);
}

int _islower(int c)
{

	int i;

	for (i = 'a'; i <= 'z'; i++)
	{
		if( c == i)
		{
			c = 1;
			break;
		}
		else if (c != i)
			c = 0;
	}

	return (c);
}
