.PHONY = all clean oclean fclean re
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM := rm -f
CFLAGS := $(CC) -Wall -Werror -Wextra -pedantic

$(OBJ): %.o: %.c
	${CFLAGS} -c -o $@ $<
all: $(OBJ)
	gcc $(OBJ) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: oclean all
